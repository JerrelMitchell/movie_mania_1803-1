<h2>All Genres</h2>

<% if !current_user.nil? && current_admin? %>
<h3>Create New Genre</h3>
  <%= form_for [:admin, @genre] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
<% end %>

<% @genres.each do |genre| %>
  <h3><%= link_to genre.name, genre_path(genre) %></h3>
<% end %>
